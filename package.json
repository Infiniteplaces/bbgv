    "io-ts-types": "^0.5.12",
    "lodash": "^4.17.20",
    "node-polyglot": "^2.4.0",
    "node-sass": "4.14.1",
    "object-hash": "^2.0.3",
    "react": "^17.0.1",
    "react-app-polyfill": "^2.0.0",
    "react-dom": "^17.0.1",
    "react-helmet": "^6.1.0",
    "react-router-dom": "^5.2.0",
    "react-scripts": "4.0.0",
