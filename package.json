    "@sanity/client": "^2.0.9",
    "@types/node": "^12.0.0",
    "@types/object-hash": "^1.3.4",
    "@types/react": "^16.9.53",
    "@types/react-dom": "^16.9.8",
    "@types/react-helmet": "^6.1.0",
    "@types/react-router-dom": "^5.1.6",
    "classnames": "^2.2.6",
    "fp-ts": "^2.8.5",
